<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{restaurant.name}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="/css/restaurant.css">
    <script src="/model/restaurantschema.js"></script>
    <script src="/model/reviewschema.js"></script>

</head>

<body>

    <!-- Navigation bar -->
    {{> navbar}}

    <!-- Restaurant Details -->
    <div class="container my-4" alt="about">
        <h1 class="text-center" id="title-restaurant" name = "restaurantname">{{restaurant.name}}</h1>
        <div class="row">
            <div class="col-md-6" id="logo">
                <img src="{{restaurant.logo}}" alt="{{restaurant.name}} Logo">
            </div>
            <div class="col-md-6" id="resto-info">
                <h2>About Us</h2>
                <p>Location: {{restaurant.location}}</p>
                <p>{{restaurant.description}}</p>
                <h2>Contact Information</h2>
                <p><strong>Phone:</strong> {{restaurant.phoneNumber}}</p>
                <p><strong>Social Media:</strong> {{restaurant.socialMedia}}</p>
                <p><strong>Recommended Count:</strong> <span
                        id="recommended-count">{{restaurant.recommendedCount}}</span></p>
                <p><strong>Not Recommended Count:</strong> <span
                        id="not-recommended-count">{{restaurant.notRecommendedCount}}</span></p>
            </div>
        </div>
    </div>



<!-- Reviews Section -->
<div class="container my-4" id="reviews">
 {{#each reviews}}
     {{> reviewcard loggedInUser=../loggedInUser review=this}}
 {{/each}}
</div>
    <!-- Submit a Review Section -->
    <div class="container my-4" id="create">
        <h2>{{title}}</h2>
        <form id="review-form" action="/review" method = "post">
            <label for="review-title">Title:</label>
            <input type="text" class="form-control" id="review-title" name="title" required>

            <label for="review-body">Body:</label>
            <textarea class="form-control" id="review-body" name="comment" rows="5" required></textarea>

            <label for="recommendation">Recommendation:</label>
            <select class="form-control" id="recommendationSelect" name="recommendation">
                <option value="recommended">Recommended</option>
                <option value="not-recommended">Not Recommended</option>
            </select>

            <label for="file-upload">Upload Image/Media (optional):</label>
            <input type="file" class="form-control-file" id="file-upload" name="image">

            <button type="submit" class="btn" id="submit">Submit</button>
        </form>
    </div>

</body>

</html>