<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{user.username}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="/css/user-profile.css">
    <script src="/model/userschema.js"></script>
    <script src="/model/reviewschema.js"></script>
</head>

<body>
    <!-- Navigation bar -->
    {{> navbar}}

    <!-- Body -->
    <div class="profile_text">
    <div class="profile_pic">
        <img src="{{user.profilePicture}}">
        <p>Do you want to replace your icon?</p>
        <form action="/edit-profile" method="post" enctype="multipart/form-data">
            <!-- Input for uploading a new image -->
            <label for="image">Select an image to upload:</label>
            <input type="file" name="image" id="image" accept="image/*">

            <p class="experience"></p>
            <!-- Input for changing username -->
            <p>Do you want to replace your username?</p>
            <input id="input_username" type="text" name="newUsername" placeholder="@{{user.username}}">

            <p class="experience"></p>
            <!-- Display location and membership date -->
            <h4>{{user.location}}</h4>
            <p>Member since:</p>
            <p>{{user.membershipDate}}</p>

            <p class="experience"></p>
            <div class="stats">
                <div id="stats_text">
                    <h1>27</h1>
                    <h4>Photos</h4>
                </div>
                <div id="stats_text">
                    <h1>19</h1>
                    <h4>Reviews</h4>
                </div>
            </div>

            <!-- Save button for the entire form -->
            <button type="submit">Save</button>
        </form>
    </div>
    <div class="profile_text_text">
        <form action="#" method="post">
            <!-- Input for editing profile text header -->
            <input id="profile_text_header" type="text" name="newDescriptionTitle" placeholder="{{user.descriptionTitle}}">
        </form>
        <textarea name="newMessage" rows="20" cols="100" placeholder="{{user.fullName}} (@{{user.username}}) {{user.description}}"></textarea>
    </div>
</div>
 




</body>

</html>