<!DOCTYPE html>
<html lang="en">
<head>
 <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <title>Search Result</title>
<link rel="stylesheet" href="../public/css/location-page.css">
 <script src="https://kit.fontawesome.com/62a1ef5fed.js" crossorigin="anonymous"></script>
 <script src="/controller/search.js"></script>
 <script src="/public/js/sortCard.js"></script>
</head>

<body>
 <!-- Navigation bar -->
 {{> navbar}}

 <!--header part-->
 <section class="location-title">
   <div>
       <h1>search result</h1>
   </div>
 </section>
 <div class="subheader">Restaurants</div>
 <!--establishments cards-->
<div class="dropdown-selection">
 <select class="rating" onchange="window.location.href='/search?query=' + encodeURIComponent(document.querySelector('input[name="query"]').value) + (this.value ? '&recommendationRatio=' + this.value : '')">
   <option selected disabled>Choose here:</option>
   <option value="1">0% & above</option>
   <option value="2">20% & above</option>
   <option value="3">40% & above</option>
   <option value="4">60% & above</option>
   <option value="5">80% & above</option>
 </select>
</div>
 <section class="container">
   {{#if results}}
   {{#each results as |result|}}
   {{> establishmentsCard result}}
   {{/each}}
   {{else}}
   <p>No results found.</p>
   {{/if}}
 </section> 
  <div class="subheader">Review</div>
  <!--review cards-->
  <div class="container">
  {{#if reviews}}
  {{#each reviews as |review|}}
  {{> searchReviewCard review}}
  {{/each}}
  {{else}}
  <p>No reviews found.</p>
  {{/if}}
  </div>
  </section>

</body>

</html>
